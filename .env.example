# TransDock Environment Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# PATH CONFIGURATION
# =============================================================================

# Base path for Docker Compose files (Unraid default: /mnt/cache/compose)
TRANSDOCK_COMPOSE_BASE=/mnt/cache/compose

# Base path for application data (Unraid default: /mnt/cache/appdata)
TRANSDOCK_APPDATA_BASE=/mnt/cache/appdata

# ZFS pool name (Unraid default: cache)
TRANSDOCK_ZFS_POOL=cache

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API server host (default: 0.0.0.0 for all interfaces)
# TRANSDOCK_HOST=0.0.0.0

# API server port (default: 8000)
# TRANSDOCK_PORT=8000

# =============================================================================
# SSH CONFIGURATION
# =============================================================================

# Default SSH user for remote connections (default: root)
# TRANSDOCK_SSH_USER=root

# Default SSH port (default: 22)
# TRANSDOCK_SSH_PORT=22

# SSH key path for passwordless authentication (host filesystem path)
# Note: If running in a container, ensure the key is mounted as a volume
# TRANSDOCK_SSH_KEY_PATH=/root/.ssh/id_rsa

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# TRANSDOCK_LOG_LEVEL=INFO

# Log format
# TRANSDOCK_LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# =============================================================================
# TRANSFER CONFIGURATION
# =============================================================================

# Force rsync instead of ZFS send/receive (true/false)
# TRANSDOCK_FORCE_RSYNC=false

# Temporary mount base for snapshots
# TRANSDOCK_TEMP_MOUNT_BASE=/tmp/transdock_mounts

# Rsync additional options
# TRANSDOCK_RSYNC_OPTS=-avz --progress

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable API authentication (true/false)
# TRANSDOCK_AUTH_ENABLED=false

# API key for authentication (if auth is enabled)
# TRANSDOCK_API_KEY=your-secret-api-key-here

# Allowed hosts for CORS (comma-separated)
# TRANSDOCK_ALLOWED_HOSTS=localhost
# WARNING: Setting TRANSDOCK_ALLOWED_HOSTS=* allows all origins and can expose the API to unwanted domains.
# Use * only for testing or development purposes, and ensure proper restrictions in production.

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable development mode with additional debugging (true/false)
# TRANSDOCK_DEBUG=false

# Auto-reload on code changes (true/false)
# TRANSDOCK_AUTO_RELOAD=false